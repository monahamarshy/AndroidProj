<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    tools:context=".HomeFrafment">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/title"
            android:text="COLLICTIONS"
            android:textColor="@color/lavender"
            android:textSize="23sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lavender_border"
            android:gravity="center_vertical|center_horizontal"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="401dp"
        android:layout_height="711dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:columnCount="3"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="227dp"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="195dp"
                android:layout_height="169dp"
                android:src="@drawable/elegant" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:text="Elegant"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="213dp"
            android:layout_column="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="183dp"
                android:layout_height="172dp"
                android:src="@drawable/spesialshoes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Pieces"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="215dp"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="147dp"
                android:layout_height="156dp"
                android:src="@drawable/slipppesss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slippers"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="174dp"
            android:layout_height="222dp"
            android:layout_column="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="174dp"
                android:layout_height="163dp"
                android:src="@drawable/sport" />

            <TextView
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="Sport"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textStyle="bold" />

        </LinearLayout>


    </GridLayout>
</RelativeLayout>