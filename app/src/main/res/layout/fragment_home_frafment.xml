<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/monah"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="164dp"
        android:layout_height="71dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/lavender_border"
        android:gravity="center_vertical|center_horizontal"
        android:text="COLLICTIONS"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="401dp"
        android:layout_height="711dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:columnCount="3"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="227dp"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivElegan"
                android:layout_width="163dp"
                android:layout_height="196dp"
                android:src="@drawable/elegant" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:text="Elegant"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="213dp"
            android:layout_column="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSpeacial"
                android:layout_width="183dp"
                android:layout_height="184dp"
                android:src="@drawable/spesialshoes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Pieces"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="247dp"
            android:layout_column="0"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivSlippers"
                android:layout_width="182dp"
                android:layout_height="156dp"
                android:src="@drawable/slipppesss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slippers"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="219dp"
            android:layout_column="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSport"
                android:layout_width="199dp"
                android:layout_height="163dp"
                android:src="@drawable/sport" />

            <TextView
                android:layout_width="94dp"
                android:layout_height="46dp"
                android:text="Sport"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="italic" />

        </LinearLayout>


    </GridLayout>
</RelativeLayout>